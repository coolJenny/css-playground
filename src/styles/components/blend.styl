.blend
  padding 0 8px
  columns 2
  column-gap 8px
  &__item
    padding .6em .4em
    text-align center
    background #f5f5f5
    line-height 1
    cursor pointer
    transition background .15s, color .15s
    margin 0 0 7px
    border-radius 3px
    box-shadow 0 1px 2px rgba(0,0,0,0.125)
    &:hover
      background #eee
    &.is-active
      background $base-sub
      color #fff
    &:last-child
      margin-bottom 5px
