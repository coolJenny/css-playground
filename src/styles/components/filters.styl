.filters
  columns 2
  &__item
    display inline-block
    color #7f8c8d
    font-weight 600
    letter-spacing .03em
    cursor pointer
    margin-bottom .8em
    transition .15s
    user-select none
    transform translateZ(0)
    white-space nowrap
    &.is-active
      color $base-sub

  &__value
    display inline-block
    padding 0 .3em
    color #777
    margin 0 .2em
    transition .15s
    background #eee
    border-radius 3px
    cursor ns-resize
    &:hover
      background darken(#eee, 6%)
