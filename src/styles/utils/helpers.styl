.container
  display table
  height 100vh
  min-height 500px
  width 100%
  max-width 1260px
  margin auto
  padding-left 10px
  padding-right 10px
  &__app
    display table-row
    height 100%

  &__main
  &__options
    display table-cell
    vertical-align top

  &__main
    padding-bottom 25px
    padding-right 8px
    user-select none
    &-inner
      display flex
      height 100%
      flex-direction column

  &__options
    width 380px

.sec
  background #fff
  border-radius 2px
  box-shadow 0 1px 2px rgba(16,10,9,.15)
  &.-dimm
    color #7f8c8d
  &.-spacing-small .sec__heading
      margin-bottom 9px
  &__heading
    margin-bottom 12px
    display flex
    align-items center
    cursor default
  &__label
    margin-right 10px
    color $base-sub
    text-transform uppercase
  &__btn
    color lighten($text-sub, 45%)
    padding .1em .6em
    border 1px solid lighten($text-sub, 72%)
    border-radius .3em
    cursor pointer
    transition .15s
    margin-right 5px
    user-select none
    &:hover
      color mix($base-sub, #aaa, 50%)
      border 1px solid mix($base-sub, #eee, 50%)
      background rgba($base-sub, 5%)
    &:active
      color mix($base-sub, #999, 50%)
      border 1px solid mix($base-sub, #ccc, 50%)
      background rgba($base-sub, 7%)

.check
  display inline-block
  position relative
  margin-right 7px
  height 10px
  width 16px
  cursor pointer
  user-select none
  input
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0
    &:checked
      + .check__display
        background $base-sub
        transform translateX(6px) translateZ(0)
      ~ .check__background
        background lighten($base-sub, 75%)

  &__background
  &__display
    position absolute
    top 0
    left 0
    border-radius 50px
    transition .18s
  &__background
    width 100%
    height 100%
    background #efefef
    box-shadow inset 0 0 0 1px rgba(#000, 6%)
    z-index 1
  &__display
    width 10px
    height 10px
    background darken(#e8e8e8, 7%)
    z-index 2

.drag-overlay
  display none
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 100
  cursor move

.github-badge
  position relative
  z-index 10
  user-select none
  display none
  a
    display block
    clip-path polygon(100% 0, 0 0, 100% 100%)
    transition .15s
    &:hover
      opacity .8
  img
    max-height 135px

  +above(1380px)
    display block

