// Nano Scroller

.nano > .nano-pane
  background #fff
  width 4px
  padding 0
  top 90px
  bottom 25px
  &:hover > .nano-slider
    opacity 1

.nano > .nano-pane > .nano-slider
  margin 0
  background $base-sub
  opacity .6
  transition opacity .15s

