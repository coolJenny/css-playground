include ../partials/*.jade

mixin scripts()
  <!-- build:js js/app.concat.js -->
  
  script(src="vendor/jquery/jquery.min.js")
  script(src="vendor/vue/vue.min.js")
  script(src="vendor/nanoscroller/jquery.nanoscroller.min.js")
  script(src="vendor/Sortable/Sortable.js")
  script(src="vendor/prism/prism.js")
  script(src="js/app.js")
    
  <!-- endbuild -->
  
mixin styles()
  <!-- build:css css/main.concat.css -->
  
  //- Styles
  link(
    rel="stylesheet"
    href="vendor/nanoscroller/nanoscroller.css")
  link(
    rel="stylesheet"
    href="vendor/font-awesome/css/font-awesome.min.css")
  link(
    rel="stylesheet"
    href="vendor/prism/prism.css")
  link(
    rel="stylesheet"
    href="css/main.css")
    
  <!-- endbuild -->



doctype html
html
  head
    meta(charset='utf-8')
      
    title Filter Blend - CSS blend modes and filters playground
    meta(name='description' content='FilterBlend is a playground for the new CSS background-blend-mode and filter properties.')
      
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=1100, initial-scale=1.0")
    link(rel="icon" type="image/png"  href="/favicon.png" sizes="32x32")
      
    +styles

  body
    .drag-overlay
        
    .github-badge
      a(
        href="https://github.com/ilyashubin/FilterBlend"
        target='_blank'
        style="position: absolute; top: 0; right: 0; border: 0;"
      )
        img(
          src="https://camo.githubusercontent.com/52760788cde945287fbb584134c4cbc2bc36f904/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f77686974655f6666666666662e706e67"
          alt="Fork me on GitHub"
          data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png"
        )
        
    +templates
    
    .container
      .container__app#app
        .container__main
          .container__main-inner
            +header
            +preview
        .container__options
          +options
          
    +scripts
